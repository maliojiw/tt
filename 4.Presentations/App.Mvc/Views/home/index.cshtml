@using Microsoft.Extensions.Configuration
@using Microsoft.AspNetCore.Authentication
@using IdentityModel
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "external_employee";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Configuration["SiteInformation:modulename"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:appsite"]">หน้าแรก</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Welcome</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Your profile</h2>
                        <dl>
                            @foreach (var claim in User.Claims)
                            {
                                if (claim.Type == JwtClaimTypes.Name 
                                || claim.Type == JwtClaimTypes.Email
                                || claim.Type == JwtClaimTypes.Role)
                                {
                                    <dt>@claim.Type</dt>
                                    <dd>@claim.Value</dd>
                                }                                
                            }
                        </dl>                
                    </div>
                    
                </div>
            </div>
        </div>
        <!-- /.card -->
        <!-- /.row -->
    </div>

</section>

@section FooterPlaceHolder{
    <script>
        $(document).ready(function () {

        });
    </script>
}

